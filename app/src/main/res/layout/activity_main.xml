<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#191919"
    android:foregroundTint="#191919"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textResult"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#191919"
        android:foregroundTint="#191919"
        android:gravity="right|center_vertical"
        android:text="0  "
        android:textColor="#FFFFFF"
        android:textSize="60sp"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foregroundTint="#191919"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button_sin"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:height="86dp"
                android:backgroundTint="#191919"
                android:inputType="textCapCharacters"
                android:shadowColor="#191919"
                android:text="sin"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                app:strokeColor="#191919" />

            <Button
                android:id="@+id/button_cos"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:height="86dp"
                android:backgroundTint="#191919"
                android:inputType="textCapCharacters"
                android:shadowColor="#191919"
                android:text="cos"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                app:strokeColor="#191919" />

            <Button
                android:id="@+id/button_tan"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:height="86dp"
                android:backgroundTint="#191919"
                android:inputType="textCapCharacters"
                android:shadowColor="#191919"
                android:text="tan"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                app:strokeColor="#191919" />

            <Button
                android:id="@+id/button_div"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:height="86dp"
                android:backgroundTint="#191919"
                android:shadowColor="#191919"
                android:text="÷"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                app:strokeColor="#191919" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button_7"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:height="86dp"
                android:backgroundTint="#191919"
                android:shadowColor="#191919"
                android:text="7"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                app:strokeColor="#191919" />

            <Button
                android:id="@+id/button_8"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:height="86dp"
                android:backgroundTint="#191919"
                android:shadowColor="#191919"
                android:text="8"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                app:strokeColor="#191919" />

            <Button
                android:id="@+id/button_9"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:height="86dp"
                android:backgroundTint="#191919"
                android:shadowColor="#191919"
                android:text="9"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                app:strokeColor="#191919" />

            <Button
                android:id="@+id/button_mul"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:height="86dp"
                android:backgroundTint="#191919"
                android:shadowColor="#191919"
                android:text="×"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                app:strokeColor="#191919" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button_4"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:height="86dp"
                android:backgroundTint="#191919"
                android:shadowColor="#191919"
                android:text="4"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                app:strokeColor="#191919" />

            <Button
                android:id="@+id/button_5"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:height="86dp"
                android:backgroundTint="#191919"
                android:shadowColor="#191919"
                android:text="5"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                app:strokeColor="#191919" />

            <Button
                android:id="@+id/button_6"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:height="86dp"
                android:backgroundTint="#191919"
                android:shadowColor="#191919"
                android:text="6"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                app:strokeColor="#191919" />

            <Button
                android:id="@+id/button_sub"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:height="86dp"
                android:backgroundTint="#191919"
                android:shadowColor="#191919"
                android:text="−"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                app:strokeColor="#191919" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button_1"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:height="86dp"
                android:backgroundTint="#191919"
                android:shadowColor="#191919"
                android:text="1"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                app:strokeColor="#191919" />

            <Button
                android:id="@+id/button_2"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:height="86dp"
                android:backgroundTint="#191919"
                android:shadowColor="#191919"
                android:text="2"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                app:strokeColor="#191919" />

            <Button
                android:id="@+id/button_3"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:height="86dp"
                android:backgroundTint="#191919"
                android:shadowColor="#191919"
                android:text="3"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                app:strokeColor="#191919" />

            <Button
                android:id="@+id/button_sum"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:height="86dp"
                android:backgroundTint="#191919"
                android:shadowColor="#191919"
                android:text="+"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                app:strokeColor="#191919" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button_AC"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:height="86dp"
                android:backgroundTint="#191919"
                android:shadowColor="#191919"
                android:text="AC"
                android:textColor="#FF5722"
                android:textSize="24sp"
                app:strokeColor="#191919" />

            <Button
                android:id="@+id/button_0"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:height="86dp"
                android:backgroundTint="#191919"
                android:shadowColor="#191919"
                android:text="0"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                app:strokeColor="#191919" />

            <Button
                android:id="@+id/button_com"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:height="86dp"
                android:backgroundTint="#191919"
                android:shadowColor="#191919"
                android:text=","
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                app:strokeColor="#191919" />

            <Button
                android:id="@+id/button_equ"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:height="86dp"
                android:backgroundTint="#191919"
                android:shadowColor="#191919"
                android:text="="
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                app:strokeColor="#191919" />
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/textPreview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#BFBFBF"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.961"
        app:layout_constraintStart_toStartOf="@+id/textResult"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/button_decrad"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="104dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:text="DEC/RAD"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.052"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>